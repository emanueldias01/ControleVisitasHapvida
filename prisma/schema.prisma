datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Paciente {
  id         Int         @id @default(autoincrement())
  nome       String      @unique
  cpf        String      @unique
  leito      Int         @unique
  dataEntrada DateTime
  visitantes Visitante[]  // Um paciente tem v√°rios visitantes
}

model Visitante {
  id         Int       @id @default(autoincrement())
  nome       String
  cpf        String    @unique
  categoria  String
  pacienteId Int
  dataEntrada DateTime
  paciente   Paciente  @relation(fields: [pacienteId], references: [id], onDelete: Cascade)
}

